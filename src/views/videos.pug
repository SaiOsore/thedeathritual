extends layouts/default

block variables
  - const title = 'The Death Ritual - Videos'
  - const description = 'The Death Ritual | Videos Page | Ritual clip, Warzone clip, Zodiac clip, Buried alive clip | Official Warzone clip'
  -
    const videos = [
      {
        src: 'E3Q3rXwObGI',
        title: 'Zodiac'
      },
      {
        src: 'WhmbTY5Bg5c',
        title: 'Warzone'
      },
      {
        src: 'lgF_ETCrj5U',
        title: 'Ritual'
      },
      {
        src: 'sYi5EIhELyo',
        title: 'Buried Alive'
      },
    ]

block content
  div(class='videos')
    div(class='videos__container')
      h1(class='videos__title') videos
      div(class='videos__content')
        for video in videos
          div(class='video')
            a(class='video__link' href=`https://youtu.be/${video.src}` target='_blanc')
              picture
                source(srcset=`https://i.ytimg.com/vi_webp/${video.src}/maxresdefault.webp` type='image/webp')
                img(class='video__media' src=`https://i.ytimg.com/vi/${video.src}/maxresdefault.jpg` alt=`The Death Ritual - ${video.title}`)
            button(class='video__btn' type='button' aria-label='play video')
              svg(width='68' height='48' viewbox='0 0 68 48')
                path(class='video__btn-shape' d='M66.52,7.74c-0.78-2.93-2.49-5.41-5.42-6.19C55.79,.13,34,0,34,0S12.21,.13,6.9,1.55 C3.97,2.33,2.27,4.81,1.48,7.74C0.06,13.05,0,24,0,24s0.06,10.95,1.48,16.26c0.78,2.93,2.49,5.41,5.42,6.19 C12.21,47.87,34,48,34,48s21.79-0.13,27.1-1.55c2.93-0.78,4.64-3.26,5.42-6.19C67.94,34.95,68,24,68,24S67.94,13.05,66.52,7.74z')
                path(class='video__btn-icon' d='M 45,24 27,14 27,34')
            h2(class='video__title') #{video.title}


